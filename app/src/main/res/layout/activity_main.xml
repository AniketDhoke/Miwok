<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF7DA"
    tools:context="com.example.anike.miwok.MainActivity">

    <TextView
        android:id="@+id/textText1"
        android:gravity="center_vertical"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="Numbers"
        android:background="#FD8E09"
        android:paddingLeft="16dp"/>

    <TextView
        android:id="@+id/textText2"
        android:gravity="center_vertical"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="Family Members"
        android:background="#379237"
        android:paddingLeft="16dp"/>

    <TextView
        android:id="@+id/textText3"
        android:gravity="center_vertical"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="Colors"
        android:background="#8800A0"
        android:paddingLeft="16dp"/>

    <TextView
        android:id="@+id/textText4"
        android:gravity="center_vertical"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="Phrases"
        android:background="#16AFCA"
        android:paddingLeft="16dp"/>


</LinearLayout>
